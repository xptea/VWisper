{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vwisper",
  "version": "0.1.0",
  "identifier": "com.vwisper.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
    "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "splashscreen",
        "title": "VWisper",
        "width": 300,
        "height": 200,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "visible": true,
        "center": true,
        "url": "src/splashscreen.html",
        "shadow": false
      },
      {
        "label": "settings",
        "title": "VWisper Settings",
        "width": 500,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "resizable": true,
        "visible": false,
        "center": true,
        "url": "src/settings.html",
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
